# ===========================================
# Lovable Clone - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# API Keys (Required)
# ===========================================

# Vercel AI Gateway API Key
# Create a key in Vercel AI Gateway (docs): https://examples.vercel.com/docs/ai-gateway
VERCEL_AI_GATEWAY_API_KEY=your_vercel_ai_gateway_api_key_here

# Optional: override the default gateway model
AI_GATEWAY_MODEL=anthropic/claude-sonnet-4.5

# Daytona API Key
# Get your key from: https://www.daytona.io/
DAYTONA_API_KEY=your_daytona_api_key_here

# ===========================================
# Database (Required for Auth)
# ===========================================

# PostgreSQL Database URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Examples:
#   - Local: postgresql://postgres:password@localhost:5432/lovable_clone
#   - Supabase: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres
#   - Neon: postgresql://[user]:[password]@[endpoint]/[database]?sslmode=require
#   - Railway: postgresql://postgres:[password]@[host]:[port]/railway
DATABASE_URL=postgresql://postgres:password@localhost:5432/lovable_clone

# ===========================================
# JWT Authentication (Required for Auth)
# ===========================================

# JWT Secret - Used to sign and verify JWT tokens
# Generate a secure secret with: openssl rand -base64 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_base64_32

# ===========================================
# Optional Configuration
# ===========================================

# Node Environment (development/production)
NODE_ENV=development

# Application URL (used for CORS and redirects)
# Development: http://localhost:3000
# Production: https://your-domain.com
APP_URL=http://localhost:3000

# Require auth to generate code (defaults to true in production)
REQUIRE_AUTH_FOR_GENERATION=false

# Max prompt length (characters)
MAX_PROMPT_LENGTH=4000

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_GENERATE=5
RATE_LIMIT_GENERATE_DAYTONA=2
RATE_LIMIT_AUTH=10
