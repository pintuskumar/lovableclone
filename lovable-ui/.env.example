# Vercel AI Gateway API Key
# Create a key in Vercel AI Gateway (docs): https://examples.vercel.com/docs/ai-gateway
VERCEL_AI_GATEWAY_API_KEY=your_vercel_ai_gateway_api_key_here

# Optional: override the default gateway model
AI_GATEWAY_MODEL=anthropic/claude-sonnet-4.5

# Daytona API Key
# Get your key from: https://www.daytona.io/
DAYTONA_API_KEY=your_daytona_api_key_here

# ===========================================
# Database (Required for Auth)
# ===========================================

# PostgreSQL Database URL used by Prisma
DATABASE_URL=postgresql://postgres:password@localhost:5432/lovable_clone

# Optional for some managed Postgres providers / migration workflows
# DIRECT_URL=postgresql://postgres:password@localhost:5432/lovable_clone

# ===========================================
# JWT Authentication (Required for Auth)
# ===========================================

# Generate a secure secret (example):
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=replace_with_a_secure_random_secret

# ===========================================
# Optional App Configuration
# ===========================================

# Application URL (used for allowed origins)
# Example: http://localhost:3000 or https://your-domain.com
APP_URL=http://localhost:3000

# Require auth to generate code (defaults to true in production)
REQUIRE_AUTH_FOR_GENERATION=false

# Max prompt length (characters)
MAX_PROMPT_LENGTH=4000

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_GENERATE=5
RATE_LIMIT_GENERATE_DAYTONA=2
RATE_LIMIT_AUTH=10
